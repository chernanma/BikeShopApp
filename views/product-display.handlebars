{{> dashboard-header}}
<!-- main -->
<main class="container mt-4">
  <!-- back -->
  <a class="nav-link-product-display" class="btn border" href="#">back</a>
  <!-- row product display -->
  <div class="row">
    <!-- col product heading-->
    <div class="col-sm-12">
      <!-- product title -->
      <h4 id="product-display-title">product Name</h4>
      <!-- product description -->
      <p id"product-display-description">Lorem ipsum dolor sit amet consectetur, adipisicing elit.
        Commodi fugit maxime unde atque voluptate officia repellat velit. Quasi, eius nihil laborum
        blanditiis fugiat assumenda architecto perferendis sint, odio mollitia maxime?</p>
      <!-- product number -->
      <p id="product-display-number">pn: 1235123</p>
    </div>
    <!-- col product display-->
    <div class="col-sm-12 col-md-8">
      <div id="product-display-img-container">
        <img id="product-display-img" class="img-fluid" src="https://i.pinimg.com/originals/1a/ef/3f/1aef3f89e34b2a17ed552ad0ec9e9f2b.jpg" alt="">
      </div>
    </div>
    <!-- col product description-->
    <div class="col-sm-12 col-md-4 d-flex flex-column justify-content-between">
      <!-- price -->
      <p>
        <span>price: </span>
        <span id="product-display-price" class="d-block display-4">$100</span>
      </p>
      <!-- product number and model -->
      <p>
        <span id="product-display-id" class="d-block">PN: 123123 </span>
        <span id="product-display-model" class="d-block">model: 123123</span>
      </p>
      <!-- produdct category and brand -->
      <p>
        <span id="product-display-brand" class="d-block">Brand: Ride</span>
        <span id="product-display-category" class="d-block">Category: Bike</span>
      </p>
      <!-- produdct stock and quantity -->
      <p>
        <span id="product-display-stock" class="d-block">In stock : 5</span>
        <form id="product-display-form" action="#">
          <!-- product id -->
          <input type="text" value="{{product.id}}" hidden name="product-display-id">
          <label for="product-display-quantity">Quantity</label>
          <!-- quantity -->
          <select class="form-control" name="product-display-quantity">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
          <!-- add to cart -->
          <button class=" mt-3 form-control btn btn-success" type="submit">Add to Cart</button>
        </form>
      </p>
    </div>
  </div>
  <!-- row related products -->
  <div class="row mt-3 pt-5 border-top">
    <!-- col -->
    <div class="col-sm-12 d-flex justify-content-center flex-nowrap overflow-auto">
      <!-- related product card -->
      <div class="card" style="width: 18rem;">
        <img class="card-img-top img-fluid" src="https://i.pinimg.com/originals/1a/ef/3f/1aef3f89e34b2a17ed552ad0ec9e9f2b.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Product name</h5>
          <p class="card-text">$100</p>
          <a href="#" class="btn btn-primary">View Details</a>
        </div>
      </div>
    </div>
  </div>
</main> (edited) 