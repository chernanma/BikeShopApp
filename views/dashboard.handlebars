{{> dashboard-sidebar}}
{{> dashboard-header}}
<!-- main content -->
<main>
    <!-- row -->
    <div class="row mt-4">
        <!-- col pending services and order -->
        <div class="col-sm-12 p-3 m-3 d-flex flex-wrap justify-content-around">
            <!-- pending services -->
            <div class="card text-center" style="width: 18rem;">
                <a href="/" class="d-block text-dark">
                    <div class="card-body mt-3">
                        <h5 class="card-title d-block">E-commerce Page<i class="pl-2 fas fa-tag"></i></h5>
                    </div>
                </a>
            </div>
            <!-- create order -->
            <div class="card text-center" style="width: 18rem;">
                <a href="/orders" class="text-dark">
                    <div class="card-body mt-3">
                        <h5 class="card-title d-block">create order<i class="pl-2 fas fa-desktop"></i></h5>
                    </div>
                </a>
            </div>
        </div>
        <!-- col sales chart -->
        <div id="chartContainer" style="height: 300px; width: 50%;"></div>

        <div id="chartContainerSales" style="height: 300px; width: 45%;"></div>


        <!-- col customer list -->
        <div class="col-sm-10 my-5 mx-auto">
            <!-- Customer list -->
            <!--Table-->
            <div class="tab-content" id="myTabContent">
            {{!-- employee table --}}
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="col">
                    <!-- Editable table -->
                    <div class="card customer-table">
                        <h4 class="card-header text-center font-weight-bold text-uppercase py-4">List of Customers</h4>
                        <div class="card-body">
                            <div id="customers-table" class="table-editable">
                                <div class="d-flex mb-3">
                                    <span class="align-self-center mr-2">Search: </span>
                                    <input type="text" class="form-control w-25 " id="customerSearchInput"> 
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-sm btn-success ml-auto" data-toggle="modal" data-target="#customers-modal">
                                    <i class="btn-add-customer fas fa-plus fa-2x" aria-hidden="true"></i>
                                    </button>
                                </div>
                                <!--Table-->
                                <table id="customers-table" class="table table-bordered table-hover">
                                    <!--Table head-->
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Street</th>
                                        <th>city</th>
                                        <th>State</th>
                                        <th>Zip Code</th>
                                        <th>Country</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <!--Table body-->
                                    <tbody id="customers-table-body">
                                        {{#each customers}}                                            
                                            {{> dashboard-customers}}                                         
                                        {{/each}}
                                    </tbody>
                                    <!--Table body-->
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>

        </div>
    </div>
</main>