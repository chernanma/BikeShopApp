{{> dashboard-sidebar}}
<main>
    {{> dashboard-header}}
    <div class="row mt-3">
        <div class="col">
            <div class="tab-content" id="myTabContent">
            {{!-- employee table --}}
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <!-- col table -->
                <div class="col">
                    <!-- Editable table -->
                    <div class="card employees-table">
                        <h3 class="card-header text-center font-weight-bold text-uppercase py-4">All Employees</h3>
                        <div class="card-body">
                            <div id="employees-table" class="table-editable">
                                <!-- Button trigger modal -->
                                <button type="button" class="float-right mb-3 btn btn-sm btn-success" data-toggle="modal" data-target="#employees-modal">
                                <i class="btn-add-newproduct fas fa-plus fa-2x" aria-hidden="true"></i>
                                </button>
                                <table class="table table-bordered table-responsive-md table-striped text-center">
                                    <thead>
                                        <tr>
                                            <th class="text-center">ID</th>
                                            <th class="text-center">First Name</th>
                                            <th class="text-center">Last Name</th>
                                            <th class="text-center">Job Title</th>
                                            <th class="text-center">Email</th> 
                                            <th class="text-center">Phone</th>                                           
                                            <th class="text-center"></th>
                                        </tr>
                                    </thead>
                                    {{!-- table body --}}
                                    <tbody>
                                        {{#each employees}}                                            
                                            {{> dashboard-employees}}                                         
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>